class ColoradoHikes::Regions

  attr_accessor :name, :url

  @@all = []

  def self.new_from_page(r)
     self.new(
       r.css("span.cat-ttl").children,
       r.css("div.content a").attribute("href").value
       )
  end

  def initialize(name=nil, url=nil)
    @name = name
    @url = url
    @@all << self
  end

  def self.all
    @@all
  end

  def self.find(id)
    self.all[id-1]
   end

end
